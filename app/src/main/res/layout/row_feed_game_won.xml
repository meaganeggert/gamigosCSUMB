<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/bubble_feed">

<!--    Board Game Image -->
    <ImageView
        android:id="@+id/feed_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:background="@color/neutraltan"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/achievement_24"
        app:tint="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dividerHR" />

<!--    Achievements Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/feed_bg_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:background="@color/neutraltan"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/die_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularImage"
        app:layout_constraintBottom_toTopOf="@id/dividerHR" />

<!--    Achievement Message -->
    <TextView
        android:id="@+id/feed_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Person X won a game of Y."
        android:textColor="@color/darkblue"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:maxLines="2"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:lineHeight="22sp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="3dp"
        app:layout_constraintStart_toEndOf="@id/feed_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dividerHR"
        app:layout_constraintEnd_toStartOf="@id/feed_bg_image"/>

<!--    Win Stat Line -->
    <TextView
        android:id="@+id/feed_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Win Streak ++"
        android:textColor="@color/green"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:lineHeight="22sp"
        android:layout_marginHorizontal="3dp"
        app:layout_constraintStart_toEndOf="@id/feed_icon"
        app:layout_constraintTop_toBottomOf="@id/feed_message"
        app:layout_constraintBottom_toTopOf="@id/dividerHR"
        app:layout_constraintEnd_toStartOf="@id/feed_bg_image"/>

    <!--    Horizontal Rule -->
    <View
        android:id="@+id/dividerHR"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/medgrey"
        android:layout_margin="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toBottomOf="@id/feed_bg_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/feed_time"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avatar-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/feed_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:contentDescription="profile"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerHR"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/CircularImage"
        android:src="@drawable/ic_person_24" />

    <TextView
        android:id="@+id/feed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/jetbrains_mono_thin"
        android:maxLines="1"
        android:text="Just now"
        android:textColor="#645452"
        app:autoSizeMaxTextSize="8sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerHR"
        app:layout_constraintBottom_toBottomOf="parent" />

<!--    THESE ARE JUST HERE SO WE DON'T GET ERRORS WITH THE FEED ADAPTER-->
    <TextView
        android:id="@+id/feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X earned Y"
        android:textColor="@color/darkblue"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:lineHeight="22sp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/feed_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/feed_description"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>