<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutraltan"
    tools:context=".ui.activities.MatchLandingActivity">

    <!--    Create Match Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_createQuickMatch"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:text="New Game"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/matchesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"  />

    <!--    Horizontal Rule -->
    <View
        android:id="@+id/matchTitleHR"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/neutralbrown"
        android:layout_margin="10dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toBottomOf="@id/button_createQuickMatch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/matchesTitle" />


    <!--    Active Events Text Title -->
    <TextView
        android:id="@+id/matchesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Games"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="19sp"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/button_createQuickMatch"
        app:layout_constraintBottom_toTopOf="@id/matchTitleHR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--    Horizontal Rule -->
<!--    <View-->
<!--        android:id="@+id/matchDisplayHR"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@color/medgrey"-->
<!--        android:layout_margin="10dp"-->
<!--        android:layout_marginStart="15dp"-->
<!--        android:layout_marginEnd="15dp"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/matchesTitle"-->
<!--        app:layout_constraintBottom_toTopOf="@id/recyclerView_Matches"-->
<!--        />-->

    <!--    Active Events Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Matches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/neutralbrown"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/event_row"
        tools:itemCount="2"
        app:layout_constraintTop_toBottomOf="@id/matchesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>