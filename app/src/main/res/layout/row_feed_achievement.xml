<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginVertical="1dp"
    android:background="@color/medgrey">

    <ImageView
        android:id="@+id/feed_AchievementIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:background="@color/medgrey"
        android:layout_marginStart="2dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_trophy_24"
        app:tint="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/feed_AchievementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X earned Y"
        android:textColor="@color/darkblue"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:fontFamily="serif-monospace"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/feed_AchievementIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/feed_AchievementTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just now"
        android:textColor="#000000"
        android:maxLines="1"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/feed_AchievementIcon"
        app:layout_constraintTop_toBottomOf="@id/feed_AchievementTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>