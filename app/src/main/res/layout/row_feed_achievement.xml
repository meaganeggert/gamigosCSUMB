<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/bubble_feed">

    <ImageView
        android:id="@+id/feed_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:background="@color/neutraltan"
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_trophy_24"
        app:tint="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/dividerHR" />

    <TextView
        android:id="@+id/feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X earned Y"
        android:textColor="@color/darkblue"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:lineHeight="22sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/feed_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/feed_description"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/feed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By doing something crazy"
        android:textColor="@color/darkblue"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/jetbrains_mono_thin"
        app:layout_constraintStart_toEndOf="@id/feed_icon"
        app:layout_constraintTop_toBottomOf="@id/feed_title"
        app:layout_constraintBottom_toTopOf="@id/dividerHR"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--    Horizontal Rule -->
    <View
        android:id="@+id/dividerHR"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/medgrey"
        android:layout_margin="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toBottomOf="@id/feed_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/feed_time"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/feed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/jetbrains_mono_thin"
        android:maxLines="1"
        android:text="Just now"
        android:textColor="#645452"
        app:autoSizeMaxTextSize="8sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerHR"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>