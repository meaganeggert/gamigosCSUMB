<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    tools:context=".ui.activities.ProfileActivity">

        <!-- later you can add an ImageView for avatar -->
        <TextView
            android:id="@+id/tvProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:src="@android:drawable/ic_menu_camera"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Profile Photo"/>

        <EditText
            android:id="@+id/etDisplayName"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Display name"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvPrivacyOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Options"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/rgPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <RadioButton
                android:id="@+id/rbPublic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public" />

            <RadioButton
                android:id="@+id/rbFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends only" />

            <RadioButton
                android:id="@+id/rbPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private" />
        </RadioGroup>


        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:enabled="false"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="20dp"
            />

        <!-- Button to test BGG API -->
        <Button
            android:id="@+id/button_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="BGG API Test"
            android:fontFamily="serif-monospace"
            android:maxLines="1"
            android:textColor="@color/darkblue"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/button_firebaseTest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_firebaseTest"
            app:layout_constraintTop_toTopOf="@+id/button_firebaseTest"
            app:layout_constraintVertical_bias="0.0" />

        <!-- Button to test Firebase -->
        <Button
            android:id="@+id/button_firebaseTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="Firebase Test"
            android:fontFamily="serif-monospace"
            android:maxLines="1"
            android:textColor="@color/darkblue"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toStartOf="@+id/button_test"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="547dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Log out button -->
        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="Log Out"
            android:fontFamily="serif-monospace"
            android:maxLines="1"
            android:textColor="@color/darkblue"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.871" />

    </LinearLayout>

</ScrollView>