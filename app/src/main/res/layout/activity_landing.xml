<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LandingActivity">

    <!-- Text display to show that Google sign-in was working correctly -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="YOU SIGNED IN WITH GOOGLE!"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    All Feed Button -->
    <!--    Will work to filter feed by only events -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAll"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="All"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonEvents"
        />

    <!--    Events Button -->
    <!--    Will work to filter feed by only events -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEvents"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="Events"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonAll"
        app:layout_constraintEnd_toStartOf="@id/buttonGames"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Games Button -->
    <!--    Will work to filter feed by only games -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGames"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="Games"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonEvents"
        app:layout_constraintEnd_toStartOf="@id/buttonAchievements"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Achievements Button -->
    <!--    Will work to filter feed by only achievements -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAchievements"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="Achievements"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Achievement Feed -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFeed"
        android:background="#EEEEEE"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAchievements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/row_feed_achievement"/>

    <!--    Empty Feed Default -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing to display."
        android:textColor="@color/darkblue"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonAchievements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonQuickGame"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:text="Quick Game"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>