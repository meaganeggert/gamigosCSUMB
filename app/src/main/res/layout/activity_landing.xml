<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutralbrown"
    tools:context=".ui.activities.LandingActivity">

    <!-- Text display to show that Google sign-in was working correctly -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="YOU SIGNED IN WITH GOOGLE!"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Background View -->
    <View
        android:id="@+id/backgroundBar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="4dp"
        android:background="@color/darkestblue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    Recycler View for Recent Matches -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentMatchRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_match"
        tools:itemCount="3"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toTopOf="@id/backgroundBar"
        app:layout_constraintBottom_toTopOf="@id/indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

<!--    Page Indicators -->
    <me.relex.circleindicator.CircleIndicator2
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingVertical="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backgroundBar"
        app:ci_drawable="@drawable/page_dot_active"
        app:ci_drawable_unselected="@drawable/page_dot_inactive"/>


    <!--    All Feed Button -->
    <!--    Will work to filter feed by only events -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/oswald_light"
        android:text=""
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_home_24"
        app:iconTint="@color/darkblue"
        app:iconSize="24dp"
        app:iconGravity="textEnd"
        android:paddingEnd="8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/darkblue"
        app:cornerRadius="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/backgroundBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonEvents"
        />

    <!--    Events Button -->
    <!--    Will work to filter feed by only events -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEvents"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/oswald_light"
        android:text=""
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_event_24"
        app:iconTint="@color/darkblue"
        app:iconSize="24dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:textColor="@color/darkblue"
        app:cornerRadius="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonAll"
        app:layout_constraintEnd_toStartOf="@id/buttonGames"
        app:layout_constraintTop_toBottomOf="@id/backgroundBar" />

    <!--    Games Button -->
    <!--    Will work to filter feed by only games -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGames"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/oswald_light"
        android:text=""
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_trophy_24"
        app:iconTint="@color/darkblue"
        app:iconSize="24dp"
        app:iconGravity="textEnd"
        android:paddingEnd="7dp"
        android:textColor="@color/darkblue"
        app:cornerRadius="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonEvents"
        app:layout_constraintEnd_toStartOf="@id/buttonAchievements"
        app:layout_constraintTop_toBottomOf="@id/backgroundBar" />

    <!--    Achievements Button -->
    <!--    Will work to filter feed by only achievements -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAchievements"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/oswald_light"
        android:text=""
        android:padding="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/achievement_24"
        app:iconTint="@color/darkblue"
        app:iconSize="24dp"
        app:iconGravity="textEnd"
        android:paddingEnd="7dp"
        android:textColor="@color/darkblue"
        app:cornerRadius="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toEndOf="@id/buttonGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroundBar" />

    <!--    Feed -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFeed"
        android:background="@color/neutralbrown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonAchievements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/row_feed_achievement"/>

    <!--    Empty Feed Default -->
    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing to display."
        android:textColor="@color/darkblue"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/buttonAchievements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>