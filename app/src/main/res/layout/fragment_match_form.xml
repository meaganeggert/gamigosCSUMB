<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bubble_feed"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/textView_matchDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Details"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game"
        android:textSize="12dp"
        android:layout_marginTop="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchView_bggSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:queryHint="Search Board Game Geek..."
            android:iconifiedByDefault="false"
            android:layout_margin="3dp"/>

        <Spinner
            android:id="@+id/dropdown_gameName"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule Changes"
        android:textSize="12dp"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/editTextTextMultiLine_rules"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Rule changes..."
        android:inputType="textMultiLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Notes"
        android:textSize="12dp"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/editTextTextMultiLine_notes"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Notes..."
        android:inputType="textMultiLine"/>


<!--    Allows user to select how a players get ranked (highest/lowest score or custom placements)-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placements Determined By"
        android:textSize="12dp"
        android:layout_marginTop="12dp"/>
    <Spinner
        android:id="@+id/dropdown_winRule"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_vertical"/>


<!--    Match placement/score results-->
    <LinearLayout
        android:id="@+id/matchResultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_removeTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Team"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/button_addTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Team"/>
    </LinearLayout>


</LinearLayout>