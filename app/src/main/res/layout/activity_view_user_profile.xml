<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ViewUserProfileActivity"
    android:padding="16dp">

  <TextView
      android:id="@+id/tvProfileTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/user_profile"
      android:textSize="22sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/ivProfilePhoto"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:scaleType="centerCrop"
      android:layout_marginTop="24dp"
      android:src="@android:drawable/ic_menu_camera"
      android:clickable="true"
      android:focusable="true"
      android:contentDescription="@string/profile_photo"
      app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
      app:layout_constraintStart_toStartOf="parent"/>

  <TextView
      android:id="@+id/tvDisplayName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/display_name"
      android:layout_marginTop="12dp"
      app:layout_constraintTop_toBottomOf="@id/ivProfilePhoto"/>

  <TextView
      android:id="@+id/tvEmail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/email"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@id/tvDisplayName"
      app:layout_constraintStart_toStartOf="parent"/>

    <!-- Primary action button -->
    <Button
        android:id="@+id/btnPrimaryAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_friend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"/>

    <!-- Secondary action (only for incoming: deny) -->
    <Button
        android:id="@+id/btnSecondaryAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deny"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"/>

  </androidx.constraintlayout.widget.ConstraintLayout>