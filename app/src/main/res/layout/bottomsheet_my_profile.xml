<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myProfileSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        android:elevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/neutraltan"
        app:shapeAppearanceOverlay="@style/ShapeAppearance_App_BottomSheet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- drag handle -->
            <View
                android:id="@+id/dragHandle"
                android:layout_width="72dp"
                android:layout_height="5dp"
                android:layout_marginTop="6dp"
                android:background="@color/grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/dragHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="8dp"/>

            <ImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="14dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="@string/profile_photo"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="#444444"
                app:layout_constraintTop_toBottomOf="@id/ivProfilePhoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="email@example.com"/>

            <TextView
                android:id="@+id/tvDisplayNameLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Display Name"
                android:textStyle="bold"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@id/tvEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/etDisplayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Display name"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tvDisplayNameLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvPrivacyOptions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Privacy Options"
                android:textStyle="bold"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/etDisplayName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RadioGroup
                android:id="@+id/rgPrivacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvPrivacyOptions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RadioButton
                    android:id="@+id/rbPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public" />

                <RadioButton
                    android:id="@+id/rbFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends only" />

                <RadioButton
                    android:id="@+id/rbPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private" />
            </RadioGroup>

            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/rgPrivacy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonQuickGame"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quick Game"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/btnSaveProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/buttonQuickGame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="6dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.core.widget.NestedScrollView>
