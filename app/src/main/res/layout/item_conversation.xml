<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    android:layout_marginVertical="3dp"
    app:strokeColor="#33000000"
    app:cardBackgroundColor="@color/neutraltan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/neutraltan">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageOtherAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_24"
            android:contentDescription="@string/conversation_avatar"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CircleImageView"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvOtherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_light"
                android:letterSpacing="0.05"
                android:text="Other User"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLastMessage"
                android:fontFamily="@font/jetbrains_mono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Last message preview..." />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jetbrains_mono"
            android:text="12:34"
            android:textSize="12sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
