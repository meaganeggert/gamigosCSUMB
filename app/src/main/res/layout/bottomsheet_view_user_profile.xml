<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="false"
        android:elevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/neutraltan"
        app:shapeAppearanceOverlay="@style/ShapeAppearance_App_BottomSheet">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- drag handle -->
            <View
                android:id="@+id/dragHandle"
                android:layout_width="44dp"
                android:layout_height="5dp"
                android:layout_marginTop="6dp"
                android:background="@color/grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_profile"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/oswald_light"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/dragHandle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="@string/profile_photo"
                app:layout_constraintTop_toBottomOf="@id/tvProfileTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CircleImageView"/>

            <TextView
                android:id="@+id/tvDisplayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:fontFamily="@font/oswald_light"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/ivProfilePhoto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Display Name"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jetbrains_mono"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tvDisplayName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="email@example.com"/>

            <!-- Buttons -->
            <Button
                android:id="@+id/btnPrimaryAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/add_friend"
                app:layout_constraintTop_toBottomOf="@id/tvEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSecondaryAction"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/jetbrains_mono"
                android:letterSpacing="0.1"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:backgroundTint="#1b3b00"
                android:textColor="@color/lightgrey"/>

            <Button
                android:id="@+id/btnSecondaryAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deny"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/btnPrimaryAction"
                app:layout_constraintBottom_toBottomOf="@id/btnPrimaryAction"
                app:layout_constraintStart_toEndOf="@id/btnPrimaryAction"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/jetbrains_mono"
                android:letterSpacing="0.1"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:backgroundTint="#4f0000"
                android:textColor="@color/lightgrey"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.core.widget.NestedScrollView>
