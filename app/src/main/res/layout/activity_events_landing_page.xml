<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutraltan"
    tools:context=".ui.activities.EventsLandingPage">

<!--    Create Event Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_createEventTest"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:text="Create Event"
        android:textColor="@color/darkblue"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:cornerRadius="10dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/activeEventsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"  />

    <!--    Horizontal Rule -->
    <View
        android:id="@+id/activeHR"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/neutralbrown"
        android:layout_marginTop="10dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toBottomOf="@id/button_createEventTest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activeEventsTitle" />


    <!--    Active Events Text Title -->
    <TextView
        android:id="@+id/activeEventsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Active Events"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/button_createEventTest"
        app:layout_constraintBottom_toTopOf="@id/activeHR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!--    Horizontal Rule -->
    <View
        android:id="@+id/activeHR"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/medgrey"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/activeEventsTitle"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewActiveEvents"
        />

<!--    Active Events Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewActiveEvents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/neutralbrown"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/event_row"
        tools:itemCount="2"
        app:layout_constraintTop_toBottomOf="@id/activeHR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pastEventsTitle" />

<!--&lt;!&ndash;    Gradient Mask for Recycler &ndash;&gt;-->
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="160dp"-->
<!--        android:layout_gravity="bottom"-->
<!--        app:layout_constraintTop_toBottomOf="@id/activeHR"-->
<!--        app:layout_constraintBottom_toTopOf="@id/pastEventsTitle"-->
<!--        android:background="@drawable/gradient_fade" />-->

    <!--    Past Events Text Title -->
    <TextView
        android:id="@+id/pastEventsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Past Events"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewActiveEvents"
        app:layout_constraintBottom_toTopOf="@id/pastHR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--    Horizontal Rule -->
    <View
        android:id="@+id/pastHR"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/medgrey"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/pastEventsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewPastEvents" />

<!--    Past Events Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPastEvents"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/neutralbrown"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/event_row_past"
        tools:itemCount="2"
        app:layout_constraintTop_toBottomOf="@id/pastHR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!--    Gradient Mask for Recycler -->
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="160dp"-->
<!--        android:layout_gravity="bottom"-->
<!--        app:layout_constraintTop_toBottomOf="@id/pastHR"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        android:background="@drawable/gradient_fade" />-->

</androidx.constraintlayout.widget.ConstraintLayout>